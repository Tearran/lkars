#/bin/bash

dir="$HOME/.local/src/neo-config"

if which git >/dev/null; then
  	git clone https://github.com/Tearran/lkars.git "$dir"
else
	sudo apt update
	sudo apt install git -y
	https://github.com/Tearran/neo-config.git "$dir"
fi

whiptail --msgbox "Program complete. Enter when ready." --clear 8 78

[[ -f "$dir" ]] && chmod +x "$dir/neo-config" && bash "$dir/neo-config"
