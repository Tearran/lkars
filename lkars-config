#!/bin/bash
# lkars-config

source "/usr/lib/liblkars-1"

menu_main(){
  item="item"
  menu=("1" "Display" 2 "Apps" "0" "Reboot")
  CHOICE=$( whiptail --title "LKARS Systems" --cancel-button Finish  --menu "Make your choice" 16 100 9 "${menu[@]}"  3>&2 2>&1 1>&3 )
    case $CHOICE in
        "1") menu_display ;;
        "2") menu_apps ;;   
        "0") sudo reboot ;;
         *) exit ;;
    esac
}

menu_display(){
  menu=("1" "ST7735SW" "2" "Pirate audio phat" "3" "Restore System Default")
  CHOICE=$( whiptail --title "LKARS Systems" --cancel-button Back --menu "Make your choice" 16 100 9 "${menu[@]}"  3>&2 2>&1 1>&3 )
      case "$CHOICE" in
        "1") build_st7735sw_fbcp && 128x160_bootconfig && fbcpd_systemctl;;
        "2") build_pirate_audio_fbcp && 240x240_bootconfig && fbcpd_systemctl ;;
        "3") default_bootconfig && ( sudo systemctl disable fbcpd ) ;;
      esac
      return 0
}

menu_apps(){
  menu=("1" "Download Source" "2" "Virtual environment" "3" "Samba file share")
  CHOICE=$( whiptail --title "LKARS Systems" --cancel-button Back --menu "Make your choice" 16 100 9 "${menu[@]}"  3>&2 2>&1 1>&3 )

      case "$CHOICE" in
        "1") get_src ;;
        "2") set_vertenv ;;
        "3") set_samba ;;
      esac
      return 0
}

while true ;
 do
   menu_main
 done
